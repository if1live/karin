# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace =  true

[*.{ts,js}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.liquid]
indent_style = space
indent_size = 2

[*.tf]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 4
