{% layout "layouts/base_admin.liquid" %}

{% block content %}
  <h1>consumer</h1>

  <table class="ui selectable table">
    <thead>
      <tr>
        <th>mapping</th>
        <th>state</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      {% for entry in entries %}
        {% assign actor = entry.actor %}
        <tr>
          <td>
            <dl>
              <dt>uuid</dt>
              <dd>{{ entry.uuid }}</dd>
              <dt>sqs</dt>
              <dd>{{ entry.display_eventSourceArn }}</dd>
              <dt>lambda</dt>
              <dd>{{ entry.display_functionArn }}</dd>
            </dl>

            <details>
              <summary>details</summary>
<pre>{{ entry | json: 2}}</pre>
            </details>
          </td>

          <td>
            {% if actor %}
              <dl>
                <dt>tick</dt>
                <dd>{{ actor.tick }}</dd>
              </dl>
            {% else %}
              NO_ACTOR
            {% endif %}
          </td>

          <td>
            <form method="post" class="ui mini buttons">
              <input
                type="hidden"
                name="uuid"
                value="{{ entry.uuid }}">

              <button
                class="ui primary button"
                type="submit"
                formaction="/admin/consumer/start">
                start
              </button>

              <div class="or"></div>

              <button
                class="ui secondary button"
                type="submit"
                formaction="/admin/consumer/stop">
                stop
              </button>

              <div class="or"></div>

              <button
                class="ui button"
                type="submit"
                formaction="/admin/consumer/consume">
                consume
              </button>
            </form>
          </td>
          <td></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}